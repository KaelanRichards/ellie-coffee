datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roastLogs RoastLog[]
  profiles  RoastProfile[]
}

model RoastLog {
  id           String   @id @default(uuid())
  date         DateTime
  beanType     String
  profileId    String
  profile      RoastProfile @relation(fields: [profileId], references: [id])
  equipment    String
  notes        String?
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  cuppingNotes CuppingNote[]
  weight       Float? 
}

model RoastProfile {
  id        String   @id @default(uuid())
  name      String
  data      Json
  // Example json data structure:
  // {
  //   "temperatureCurve": [
  //     {"time": 0, "temp": 200},
  //     {"time": 60, "temp": 300},
  //     {"time": 120, "temp": 380},
  //     {"time": 180, "temp": 420}
  //   ],
  //   "firstCrack": 150,
  //   "developmentTime": 60,
  //   "endTemperature": 430,
  //   "totalRoastTime": 240,
  //   "airflowSettings": [
  //     {"time": 0, "value": 50},
  //     {"time": 120, "value": 75},
  //     {"time": 180, "value": 100}
  //   ]
  // }
  firstCrack     Int?
  developmentTime Int?
  endTemperature  Int?
  totalRoastTime  Int?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roastLogs RoastLog[]
}

model GreenBean {
  id              String   @id @default(uuid())
  origin          String
  variety         String
  processingMethod String
  quantity        Float
  purchaseDate    DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CuppingNote {
  id         String   @id @default(uuid())
  roastLogId String
  roastLog   RoastLog @relation(fields: [roastLogId], references: [id])
  aroma      Int
  flavor     Int
  aftertaste Int
  acidity    Int
  body       Int
  balance    Int
  overall    Int
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
